<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Loading Animation -->
    <div class="loader">
        <div class="loader-content">
            <div class="loader-spinner"></div>
            <p>Loading Portfolio...</p>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">Portfolio</div>
            <button class="nav-toggle" id="nav-toggle">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <ul class="nav-menu" id="nav-menu">
                <li><a href="/" class="nav-link">Home</a></li>
                <!-- <li><a href="/about" class="nav-link">About</a></li> -->
                <li><a href="/education" class="nav-link">Education</a></li>
                <li><a href="/skills" class="nav-link">Skills</a></li>
                <li><a href="/experience" class="nav-link">Experience</a></li>
                <li><a href="/achievements" class="nav-link">Achievements</a></li>
                <li><a href="/contact" class="nav-link active">Contact</a></li>
            </ul>
        </div>
    </nav>


    <!-- Contact Information Section -->
    <section class="section">
        <div class="container">
            <h2 class="section-title">Contact Information</h2>
            <div class="contact-content">
                <div class="contact-info-detailed">
                    <h3 style="color:black">Direct Contact</h3>
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <div>
                            <h4>Email</h4>
                            <p><%= data.personalInfo.email || 'saipavankumar.m23@iiits.in' %></p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-phone"></i>
                        <div>
                            <h4>Phone</h4>
                            <p><%= data.personalInfo.phone || '+918885631348' %></p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            <h4>Location</h4>
                            <p><%= data.personalInfo.location || 'Bapatla, Andhra Pradesh, India' %></p>
                        </div>
                    </div>
                </div>
                
                <div class="resume-download-section">
                    <h3>Download Resume</h3>
                    <div class="resume-download">
                        <a href="/download-resume" class="resume-btn download-btn">
                            <i class="fas fa-download"></i>
                            Download Resume (PDF)
                        </a>
                    </div>
                    <p class="resume-note">Click the button above to download my resume in PDF format.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="section">
        <div class="container">
            <h2 class="section-title">Send Me a Message</h2>
            <div class="contact-form-container">
                <form class="contact-form" id="contactForm">
                    <div class="form-group">
                        <label for="name">Name *</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email *</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="subject">Subject *</label>
                        <input type="text" id="subject" name="subject" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Message *</label>
                        <textarea id="message" name="message" rows="6" required></textarea>
                    </div>
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-paper-plane"></i>
                        Send Message
                    </button>
                </form>
            </div>
        </div>
    </section>

    <!-- Availability Section -->
    <section class="section alt-bg">
        <div class="container">
            <h2 class="section-title">Availability</h2>
            <div class="availability-content">
                <div class="availability-item">
                    <i class="fas fa-briefcase"></i>
                    <h3>Open to Work</h3>
                    <p>I'm currently available for new opportunities and exciting projects.</p>
                </div>
                <div class="availability-item">
                    <i class="fas fa-clock"></i>
                    <h3>Response Time</h3>
                    <p>I typically respond to messages within 24 hours.</p>
                </div>
                <div class="availability-item">
                    <i class="fas fa-handshake"></i>
                    <h3>Collaboration</h3>
                    <p>I'm always interested in collaborating on interesting projects.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 <%= data.personalInfo.name || 'Sai Pavan Kumar Mutyala' %>. All rights reserved.</p>
        </div>
    </footer>

    <script src="/js/script.js"></script>
</body>
</html>
