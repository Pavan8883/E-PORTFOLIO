<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.4;
            color: #333;
            background: white;
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
        }

        .resume-header {
            text-align: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #2563eb;
        }

        .resume-header h1 {
            font-size: 2.5rem;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }

        .resume-header h2 {
            font-size: 1.2rem;
            color: #2563eb;
            margin-bottom: 1rem;
        }

        .contact-line {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
        }

        .resume-section {
            margin-bottom: 2rem;
        }

        .resume-section h3 {
            font-size: 1.3rem;
            color: #1e293b;
            border-bottom: 1px solid #e5e7eb;
            padding-bottom: 0.5rem;
            margin-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .experience-item,
        .education-item {
            margin-bottom: 1.5rem;
        }

        .item-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 0.5rem;
        }

        .item-title {
            font-weight: bold;
            color: #1e293b;
        }

        .item-company {
            color: #2563eb;
            font-style: italic;
        }

        .item-date {
            color: #64748b;
            font-size: 0.9rem;
        }

        .item-description {
            margin-left: 1rem;
        }

        .item-description ul {
            margin-left: 1rem;
        }

        .item-description li {
            margin-bottom: 0.25rem;
        }

        .skills-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
        }

        .skill-category h4 {
            color: #2563eb;
            margin-bottom: 0.5rem;
        }

        .skill-list {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .skill-item {
            background: #f1f5f9;
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.85rem;
            color: #475569;
        }

        .achievements-list {
            list-style: none;
        }

        .achievements-list li {
            margin-bottom: 0.5rem;
            padding-left: 1rem;
            position: relative;
        }

        .achievements-list li::before {
            content: "üèÜ";
            position: absolute;
            left: 0;
        }

        @media print {
            body {
                padding: 1rem;
                font-size: 0.9rem;
            }

            .resume-section {
                break-inside: avoid;
            }

            .contact-line {
                gap: 1rem;
            }
        }

        @media screen and (max-width: 768px) {
            .item-header {
                flex-direction: column;
            }

            .skills-grid {
                grid-template-columns: 1fr;
            }

            .contact-line {
                flex-direction: column;
                gap: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="resume-header">
        <h1><%= data.personalInfo.name || 'Your Name' %></h1>
        <h2><%= data.personalInfo.title || 'Your Professional Title' %></h2>
        <div class="contact-line">
            <span><%= data.personalInfo.email || 'your.email@example.com' %></span>
            <span><%= data.personalInfo.phone || 'Your Phone Number' %></span>
            <span><%= data.personalInfo.location || 'Your Location' %></span>
        </div>
    </header>

    <!-- Professional Summary -->
    <section class="resume-section">
        <h3>Professional Summary</h3>
        <p><%= data.personalInfo.bio || 'Write a concise professional summary highlighting your key qualifications, experience, and career objectives.' %></p>
    </section>

    <!-- Work Experience -->
    <section class="resume-section">
        <h3>Work Experience</h3>
        <% if (data.experience.length > 0) { %>
            <% data.experience.forEach(exp => { %>
                <div class="experience-item">
                    <div class="item-header">
                        <div>
                            <div class="item-title"><%= exp.position %></div>
                            <div class="item-company"><%= exp.company %></div>
                        </div>
                        <div class="item-date"><%= exp.duration %></div>
                    </div>
                    <div class="item-description">
                        <p><%= exp.description %></p>
                        <% if (exp.achievements && exp.achievements.length > 0) { %>
                            <ul>
                                <% exp.achievements.forEach(achievement => { %>
                                    <li><%= achievement %></li>
                                <% }) %>
                            </ul>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="experience-item">
                <div class="item-header">
                    <div>
                        <div class="item-title">Your Job Title</div>
                        <div class="item-company">Company Name</div>
                    </div>
                    <div class="item-date">Start Date - End Date</div>
                </div>
                <div class="item-description">
                    <p>Brief description of your role and responsibilities.</p>
                    <ul>
                        <li>Key achievement or responsibility</li>
                        <li>Another significant contribution</li>
                        <li>Notable project or outcome</li>
                    </ul>
                </div>
            </div>
        <% } %>
    </section>

    <!-- Education -->
    <section class="resume-section">
        <h3>Education</h3>
        <% if (data.education.length > 0) { %>
            <% data.education.forEach(edu => { %>
                <div class="education-item">
                    <div class="item-header">
                        <div>
                            <div class="item-title"><%= edu.degree %></div>
                            <div class="item-company"><%= edu.institution %></div>
                        </div>
                        <div class="item-date"><%= edu.year %></div>
                    </div>
                    <% if (edu.description) { %>
                        <div class="item-description">
                            <p><%= edu.description %></p>
                        </div>
                    <% } %>
                </div>
            <% }) %>
        <% } else { %>
            <div class="education-item">
                <div class="item-header">
                    <div>
                        <div class="item-title">Your Degree</div>
                        <div class="item-company">Your Institution</div>
                    </div>
                    <div class="item-date">Year</div>
                </div>
            </div>
        <% } %>
    </section>

    <!-- Skills -->
    <section class="resume-section">
        <h3>Skills</h3>
        <div class="skills-grid">
            <div class="skill-category">
                <h4>Technical Skills</h4>
                <div class="skill-list">
                    <% if (data.skills.technical.length > 0) { %>
                        <% data.skills.technical.forEach(skill => { %>
                            <span class="skill-item"><%= skill %></span>
                        <% }) %>
                    <% } else { %>
                        <span class="skill-item">JavaScript</span>
                        <span class="skill-item">HTML/CSS</span>
                        <span class="skill-item">Node.js</span>
                        <span class="skill-item">Python</span>
                        <span class="skill-item">Git</span>
                    <% } %>
                </div>
            </div>
            <div class="skill-category">
                <h4>Soft Skills</h4>
                <div class="skill-list">
                    <% if (data.skills.soft.length > 0) { %>
                        <% data.skills.soft.forEach(skill => { %>
                            <span class="skill-item"><%= skill %></span>
                        <% }) %>
                    <% } else { %>
                        <span class="skill-item">Communication</span>
                        <span class="skill-item">Team Leadership</span>
                        <span class="skill-item">Problem Solving</span>
                        <span class="skill-item">Project Management</span>
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    <!-- Achievements -->
    <% if (data.achievements.length > 0) { %>
        <section class="resume-section">
            <h3>Achievements & Awards</h3>
            <ul class="achievements-list">
                <% data.achievements.forEach(achievement => { %>
                    <li><strong><%= achievement.title %></strong> - <%= achievement.description %> (<%= achievement.date %>)</li>
                <% }) %>
            </ul>
        </section>
    <% } %>

    <!-- Extracurricular Activities -->
    <% if (data.extracurricular.length > 0) { %>
        <section class="resume-section">
            <h3>Extracurricular Activities & Volunteering</h3>
            <% data.extracurricular.forEach(activity => { %>
                <div class="education-item">
                    <div class="item-header">
                        <div>
                            <div class="item-title"><%= activity.title %></div>
                            <div class="item-company"><%= activity.organization %></div>
                        </div>
                        <div class="item-date"><%= activity.duration %></div>
                    </div>
                    <div class="item-description">
                        <p><%= activity.description %></p>
                    </div>
                </div>
            <% }) %>
        </section>
    <% } %>

    <!-- References -->
    <section class="resume-section">
        <h3>References</h3>
        <% if (data.references.length > 0) { %>
            <% data.references.forEach(ref => { %>
                <div style="margin-bottom: 1rem;">
                    <strong><%= ref.name %></strong><br>
                    <%= ref.title %>, <%= ref.company %><br>
                    <%= ref.email %> | <%= ref.phone %>
                </div>
            <% }) %>
        <% } else { %>
            <p>References available upon request</p>
        <% } %>
    </section>
</body>
</html>